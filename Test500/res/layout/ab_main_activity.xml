<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="@dimen/abs_height">


    <TextView
            android:id="@+id/absMainActivity_TextView_title"
            style="@style/Widget.TextView.BgAbsTitleTextView"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <ImageView
            android:id="@+id/absMainActivity_ImageView_menu"
            android:src="@drawable/abc_ic_ab_menu"
            android:background="@drawable/abs_ico"
            android:padding="@dimen/abs_ico_padding"
            android:layout_width="@dimen/abs_ico_horizontal_vertical"
            android:layout_height="@dimen/abs_ico_horizontal_vertical"/>
    <ImageView
            android:id="@+id/absMainActivity_ImageView_add"
            android:visibility="gone"
            android:layout_gravity="right"
            android:src="@drawable/abc_ic_ab_add"
            android:background="@drawable/abs_ico"
            android:padding="@dimen/abs_ico_padding"
            android:layout_width="@dimen/abs_ico_horizontal_vertical"
            android:layout_height="@dimen/abs_ico_horizontal_vertical"/>
    <Button
            android:id="@+id/absMainActivity_Button_logaut"
            android:visibility="gone"
            style="@style/BgButton.White"
            android:text="Logaut"
            android:drawableStart="@drawable/abc_ic_btn_left"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

</FrameLayout>