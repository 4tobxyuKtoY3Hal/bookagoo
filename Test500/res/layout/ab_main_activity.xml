<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="@dimen/abs_height">


    <TextView
            android:id="@+id/absMainActivity_TextView_title"
            style="@style/Widget.TextView.BgAbsTitleTextView"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <ImageView
            android:id="@+id/absMainActivity_ImageView_menu"
            android:src="@drawable/abc_ic_ab_menu"
            android:background="@drawable/abs_ico"
            android:padding="@dimen/abs_ico_padding"
            android:layout_width="@dimen/abs_ico_horizontal_vertical"
            android:layout_height="@dimen/abs_ico_horizontal_vertical"/>
    <ImageView
            android:id="@+id/absMainActivity_ImageView_add"
            android:visibility="gone"
            android:layout_gravity="right"
            android:src="@drawable/abc_ic_ab_add"
            android:background="@drawable/abs_ico"
            android:padding="@dimen/abs_ico_padding"
            android:layout_width="@dimen/abs_ico_horizontal_vertical"
            android:layout_height="@dimen/abs_ico_horizontal_vertical"/>
    <FrameLayout
            android:visibility="gone"
            android:id="@+id/absMainActivity_Button_logaut"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:minHeight="35dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/abc_ic_btn_left"
                    android:layout_width="20sp"
                    android:layout_height="20sp"/>
            <TextView

                    android:layout_gravity="center"
                    android:text="@string/start_buton_logaut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"/>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>