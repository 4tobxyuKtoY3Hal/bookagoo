<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9cbedf">

    <FrameLayout
                android:id="@+id/activityLogin_FrameLayout_cotextTuga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    <ScrollView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingLeft="@dimen/padding_horizontal">


            <View
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_vertical"/>

            <LinearLayout
                    android:id="@+id/pl"
                    android:layout_below="@+id/top"
                    android:layout_centerHorizontal="true"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    style="@style/BgFieldWhite"
                    android:layout_marginBottom="8dp">

                <ImageView
                        android:layout_margin="16dp"
                        android:src="@drawable/login_bg"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"/>

                <EditText
                        android:id="@+id/activityLogin_EditText_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/start_edittext_hint_email"
                        android:layout_marginBottom="16dp"
                        android:inputType="textEmailAddress"
                        android:drawableRight="@drawable/ic_mail"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="0dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/et">
                    <EditText
                            android:id="@+id/activityLogin_EditText_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/start_edittext_hint_pass"
                            android:inputType="textPassword"
                            android:background="#00000000"/>

                    <TextView
                            android:id="@+id/activityLogin_TextView_forgot"
                            android:gravity="center"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:layout_margin="6dp"
                            android:text="@string/start_buton_forgot"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="#FFF"
                            android:background="@drawable/bt_text_gray"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <FrameLayout
                            android:id="@+id/activityLogin_View_loginCreate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bt_red"
                            android:layout_marginBottom="4dp"
                            android:minHeight="35dp"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp">
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_createaccount_zsolt"
                                    android:layout_width="20sp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="8dp"/>
                            <TextView
                                    android:layout_gravity="center"
                                    android:text="@string/start_buton_create_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="#FFF"
                                    android:textStyle="bold"/>
                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                            android:id="@+id/activityLogin_Button_login"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bt"
                            android:paddingRight="16dp"
                            android:paddingLeft="16dp"
                            android:minHeight="35dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp">
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/arrow_zsolt"
                                    android:layout_width="16sp"
                                    android:layout_height="16sp"
                                    android:layout_marginRight="8dp"/>
                            <TextView
                                    android:layout_gravity="center"
                                    android:text="@string/start_buton_login"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="#FFF"
                                    android:textStyle="bold"/>
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>


            </LinearLayout>

            <!--LinearLayout
                    android:id="@+id/activityLogin_View_loginCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="@style/BgFieldWhite"
                    android:layout_marginBottom="16dp">
                <ImageView
                        android:src="@drawable/ic_createaccount"
                        android:layout_width="15dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"/>
                <TextView
                        android:gravity="center_vertical"
                        android:text="@string/start_buton_create_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/createaccount_textview"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@drawable/arrow_createaccount"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"/>
            </LinearLayout-->

            <LinearLayout
                    android:id="@+id/activityLogin_View_loginTwitter"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/pl"
                    android:layout_width="468dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="@style/BgFieldWhite"
                    android:layout_marginBottom="8dp">
                <ImageView
                        android:src="@drawable/ic_twitter"
                        android:layout_width="11dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"/>
                <TextView
                        android:gravity="center_vertical"
                        android:text="@string/start_buton_login_twitter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/twitter_textview"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@drawable/arrow_twitter"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/activityLogin_View_loginFacebook"
                    android:layout_below="@+id/activityLogin_View_loginTwitter"
                    android:layout_centerHorizontal="true"
                    android:layout_width="468dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="@style/BgFieldWhite"
                    android:layout_marginBottom="4dp">
                <ImageView
                        android:src="@drawable/ic_facebook"
                        android:layout_width="11dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"/>
                <TextView
                        android:gravity="center_vertical"
                        android:text="@string/start_buton_login_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/facebook_textview"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@drawable/arrow_facebook"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_vertical"/>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>

