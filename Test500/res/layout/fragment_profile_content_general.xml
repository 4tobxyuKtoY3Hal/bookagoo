<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/header"
                    android:paddingRight="@dimen/padding_horizontal"
                    android:paddingLeft="@dimen/padding_horizontal"
                    android:paddingBottom="@dimen/padding_vertical">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_vertical"/>
                <TextView
                        style="@style/Widget.TextView.BgHeader"
                        android:text="Account status and storage used:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginLeft="44sp"
                        style="@style/Widget.TextView.BgHeaderSvktly"
                        android:text="10 mb"
                        android:gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        style="@style/Widget.TextView.BgHeader"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/Widget.TextView.BgHeader"
                            android:text="Free:"
                            android:layout_width="44sp"
                            android:layout_height="wrap_content"/>
                    <RelativeLayout
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:background="@color/header_svktly">
                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="match_parent"
                                android:background="@color/header_focus"/>
                    </RelativeLayout>

                </LinearLayout>
                <TextView
                        style="@style/Widget.TextView.BgHeaderSvktly"
                        android:gravity="right"
                        android:text="100 mb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/Widget.TextView.BgHeader"
                            android:text="Pro:"
                            android:layout_width="44sp"
                            android:layout_height="wrap_content"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/header_svktly"/>
                </LinearLayout>

                <Button
                        android:layout_marginTop="16dp"
                        style="@style/BgButton.White"
                        android:drawableStart="@drawable/arrow_zsolt"
                        android:text="Buy Pro account $4,99"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_horizontal"
                    android:paddingLeft="@dimen/padding_horizontal"
                    android:paddingTop="@dimen/padding_vertical">
                <TextView
                        style="@style/Widget.TextView.BgRadioButton"
                        android:text="@string/profile_general_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"/>

                <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RadioButton
                            android:text="@string/profile_general_radiobutton_daddy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"/>

                    <RadioButton
                            android:text="@string/profile_general_radiobutton_mommy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"/>

                    <RadioButton
                            android:text="@string/profile_general_radiobutton_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </RadioGroup>
            </LinearLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/start_edittext_hint_name"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:layout_marginLeft="@dimen/padding_horizontal"
                    android:inputType="textPersonName"
                    android:drawableRight="@drawable/ic_fields_manicon"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/start_edittext_hint_email"
                    android:layout_marginBottom="16dp"
                    android:inputType="textEmailAddress"
                    android:drawableRight="@drawable/ic_mail"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:layout_marginLeft="@dimen/padding_horizontal"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/start_edittext_hint_pass"
                    android:layout_marginBottom="16dp"
                    android:inputType="textPassword"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:layout_marginLeft="@dimen/padding_horizontal"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/start_edittext_hint_pass"
                    android:layout_marginBottom="16dp"
                    android:inputType="textPassword"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:layout_marginLeft="@dimen/padding_horizontal"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/start_edittext_hint_pass"
                    android:layout_marginBottom="16dp"
                    android:inputType="textPassword"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:layout_marginLeft="@dimen/padding_horizontal"/>

            <LinearLayout
                    android:id="@+id/activityLogin_View_loginTwitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="@style/BgFieldWhite"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:layout_marginLeft="@dimen/padding_horizontal">
                <ImageView
                        android:src="@drawable/ic_twitter"
                        android:layout_width="11dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"/>
                <TextView
                        android:gravity="center_vertical"
                        android:text="@string/start_buton_login_twitter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/twitter_textview"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/activityLogin_View_loginFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="@style/BgFieldWhite"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:layout_marginLeft="@dimen/padding_horizontal">
                <ImageView
                        android:src="@drawable/ic_facebook"
                        android:layout_width="11dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="12dp"/>
                <TextView
                        android:gravity="center_vertical"
                        android:text="@string/start_buton_login_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/facebook_textview"
                        android:layout_weight="1"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_vertical"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>