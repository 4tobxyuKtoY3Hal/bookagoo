<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ListView
            android:visibility="gone"
            android:divider="#0000"
            android:id="@+id/fragmentWall_ListView_wall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <GridView
            android:visibility="gone"
            android:id="@+id/fragmentWall_GridView_wall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchMode="columnWidth"/>
    <FrameLayout
            android:id="@+id/fragmentWall_View_addContent"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_gravity="right"
                android:scaleType="matrix"
                android:src="@drawable/bcg_wall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <RelativeLayout

                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_width="184dp"
                android:layout_height="190dp"
                android:background="@drawable/pl_add_content">
            <TextView
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#666"
                    android:text="@string/wall_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            <Button
                    android:id="@+id/fragmentWall_View_blankWall"
                    android:background="#0000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>

    </FrameLayout>



</RelativeLayout>