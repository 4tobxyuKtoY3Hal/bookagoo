<resources>

    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>

        <item name="android:buttonStyle">@style/BgButton</item>
        <item name="android:editTextStyle">@style/Widget.EditText.BgEditText</item>
        <item name="android:textViewStyle">@style/Widget.TextView.BgFieldTextView</item>
        <item name="android:radioButtonStyle">@style/Widget.CompoundButton.RadioButton.BgRadioButton</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator.BgTab</item>

    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">#00a388</item>
        <item name="android:background">#00a388</item>

        <!--item name="backgroundSplit">#f00</item>
        <item name="android:backgroundSplit">#0f0</item-->
    </style>

    <style name="Widget.TabPageIndicator.BgTab"
           parent="@style/Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator.BgTabText</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="TextAppearance.TabPageIndicator.BgTabText" parent="@style/TextAppearance.TabPageIndicator">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#009373</item>
    </style>

    <style name="Widget.CompoundButton.RadioButton.BgRadioButton"
           parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/rb</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#008f77</item>
    </style>

    <style name="Widget.TextView.BgRadioButton" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#008f77</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.BgAbsTitleTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BgButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bt</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="BgButton.Red" parent="@style/BgButton">
        <item name="android:background">@drawable/bt_red</item>
    </style>

    <style name="BgButton.White" parent="@style/BgButton">
        <item name="android:background">@drawable/bt_white</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="BgFieldWhite">
        <item name="android:background">@drawable/field_white</item>
        <item name="android:paddingRight">@dimen/padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="BgFieldGreen">
        <item name="android:background">@drawable/field_green</item>
        <item name="android:paddingRight">@dimen/padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_vertical</item>
    </style>

    <style name="Widget.TextView.BgNavigationItem" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/navigation_draver_item_text_name</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.BgHeader" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Widget.TextView.BgHeaderSvktly" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/header_svktly</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Widget.TextView.BgNavigationItem2" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#9b9b9b</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.TextView.BgFieldTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.TextView.BgTitleTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#008f77</item>
    </style>
    <style name="Widget.TextView.BgAddContentRbTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bt_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.EditText.BgEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/et</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">@dimen/padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#008f77</item>
        <item name="android:textColorHint">#9a9a9a</item>
    </style>

    <style name="Widget.EditText.BgEditText2" parent="@android:style/Widget.EditText">
        <item name="android:background">#00000000</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#008f77</item>
        <item name="android:textColorHint">#9a9a9a</item>
    </style>

    <style name="Widget.EditText.BgEditText.BgGreenEditText" parent="@style/Widget.EditText.BgEditText">
        <item name="android:background">@drawable/et_green</item>
    </style>

</resources>